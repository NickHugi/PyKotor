/* Ubuntu Yaru Theme */
/* Modern Ubuntu design with clean, light interface and Ubuntu orange accents */

/* Global Styles */
QWidget {
    background-color: #F5F5F5;
    color: #2D2D2D;
    font-family: "Ubuntu", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Cantarell, "Helvetica Neue", sans-serif;
    font-size: 13px;
    selection-background-color: #E95420;
    selection-color: #FFFFFF;
}

/* Main Window */
QMainWindow {
    background-color: #F5F5F5;
}

QMainWindow::separator {
    background-color: #D0D0D0;
    width: 1px;
}

QMainWindow::separator:hover {
    background-color: #E95420;
}

/* Push Buttons */
QPushButton {
    background-color: #FFFFFF;
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    padding: 6px 16px;
    color: #2D2D2D;
    min-height: 28px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #F0F0F0;
    border-color: #E95420;
    color: #2D2D2D;
}

QPushButton:pressed {
    background-color: #F5A78A;
    border-color: #E95420;
    color: #2D2D2D;
}

QPushButton:default {
    background-color: #E95420;
    border-color: #E95420;
    color: #FFFFFF;
    font-weight: 600;
}

QPushButton:default:hover {
    background-color: #C34113;
    border-color: #C34113;
}

QPushButton:default:pressed {
    background-color: #A03A10;
    border-color: #A03A10;
}

QPushButton:disabled {
    background-color: #FFFFFF;
    border-color: #E8E8E8;
    color: #B0B0B0;
}

/* CheckBox */
QCheckBox {
    spacing: 6px;
    padding: 2px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #D0D0D0;
    border-radius: 4px;
    background-color: #FFFFFF;
}

QCheckBox::indicator:hover {
    border-color: #E95420;
    background-color: #F0F0F0;
}

QCheckBox::indicator:checked {
    background-color: #E95420;
    border-color: #E95420;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iOSIgdmlld0JveD0iMCAwIDEyIDkiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+CjxwYXRoIGQ9Ik0xIDQuNUw0LjUgOEwxMSAxIiBzdHJva2U9IndoaXRlIiBzdHJva2Utd2lkdGg9IjIiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCIvPgo8L3N2Zz4=);
}

QCheckBox::indicator:unchecked {
    background-color: #FFFFFF;
    border-color: #D0D0D0;
}

QCheckBox::indicator:disabled {
    background-color: #F5F5F5;
    border-color: #E8E8E8;
}

/* RadioButton */
QRadioButton {
    spacing: 6px;
    padding: 2px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #D0D0D0;
    border-radius: 9px;
    background-color: #FFFFFF;
}

QRadioButton::indicator:hover {
    border-color: #E95420;
    background-color: #F0F0F0;
}

QRadioButton::indicator:checked {
    background-color: #E95420;
    border-color: #E95420;
    border-width: 5px;
}

QRadioButton::indicator:unchecked {
    background-color: #FFFFFF;
    border-color: #D0D0D0;
}

QRadioButton::indicator:disabled {
    background-color: #F5F5F5;
    border-color: #E8E8E8;
}

/* Input Fields */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #FFFFFF;
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    padding: 6px 8px;
    color: #2D2D2D;
    selection-background-color: #E95420;
    selection-color: #FFFFFF;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #E95420;
    background-color: #FFFFFF;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #F5F5F5;
    border-color: #E8E8E8;
    color: #B0B0B0;
}

/* ComboBox */
QComboBox {
    background-color: #FFFFFF;
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    padding: 6px 8px;
    padding-right: 24px;
    color: #2D2D2D;
    min-height: 28px;
}

QComboBox:hover {
    border-color: #E95420;
}

QComboBox:focus {
    border-color: #E95420;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #D0D0D0;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
}

QComboBox::drop-down:hover {
    border-left-color: #E95420;
}

QComboBox QAbstractItemView {
    background-color: #FFFFFF;
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    selection-background-color: #E95420;
    selection-color: #FFFFFF;
    padding: 4px;
}

QComboBox QAbstractItemView::item {
    padding: 6px 8px;
    border-radius: 4px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #F0F0F0;
}

QComboBox QAbstractItemView::item:selected {
    background-color: #E95420;
    color: #FFFFFF;
}

/* SpinBox, DoubleSpinBox, DateEdit, TimeEdit, DateTimeEdit */
QSpinBox, QDoubleSpinBox, QDateEdit, QTimeEdit, QDateTimeEdit {
    background-color: #FFFFFF;
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    padding: 6px 8px;
    color: #2D2D2D;
    min-height: 28px;
}

QSpinBox:focus, QDoubleSpinBox:focus, QDateEdit:focus, QTimeEdit:focus, QDateTimeEdit:focus {
    border-color: #E95420;
}

QSpinBox::up-button, QDoubleSpinBox::up-button, QDateEdit::up-button, QTimeEdit::up-button, QDateTimeEdit::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #D0D0D0;
    border-top-right-radius: 6px;
    background-color: #FFFFFF;
}

QSpinBox::up-button:hover, QDoubleSpinBox::up-button:hover {
    background-color: #F0F0F0;
    border-left-color: #E95420;
}

QSpinBox::down-button, QDoubleSpinBox::down-button, QDateEdit::down-button, QTimeEdit::down-button, QDateTimeEdit::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 20px;
    border-left: 1px solid #D0D0D0;
    border-top: 1px solid #D0D0D0;
    border-bottom-right-radius: 6px;
    background-color: #FFFFFF;
}

QSpinBox::down-button:hover, QDoubleSpinBox::down-button:hover {
    background-color: #F0F0F0;
    border-left-color: #E95420;
    border-top-color: #E95420;
}

/* MenuBar */
QMenuBar {
    background-color: #FFFFFF;
    color: #2D2D2D;
    border-bottom: 1px solid #D0D0D0;
    padding: 2px;
}

QMenuBar::item {
    padding: 6px 12px;
    background-color: transparent;
    border-radius: 6px;
}

QMenuBar::item:selected {
    background-color: #F0F0F0;
    color: #2D2D2D;
}

QMenuBar::item:pressed {
    background-color: #F5A78A;
    color: #2D2D2D;
}

/* Menu */
QMenu {
    background-color: #FFFFFF;
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    padding: 4px;
    color: #2D2D2D;
}

QMenu::item {
    padding: 6px 24px 6px 32px;
    border-radius: 4px;
}

QMenu::item:selected {
    background-color: #E95420;
    color: #FFFFFF;
}

QMenu::item:disabled {
    color: #B0B0B0;
}

QMenu::separator {
    height: 1px;
    background-color: #D0D0D0;
    margin: 4px 8px;
}

QMenu::indicator {
    width: 16px;
    height: 16px;
    padding-left: 8px;
}

/* ProgressBar */
QProgressBar {
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    background-color: #F5F5F5;
    text-align: center;
    color: #2D2D2D;
    height: 20px;
}

QProgressBar::chunk {
    background-color: #E95420;
    border-radius: 3px;
}

/* Slider */
QSlider::groove:horizontal {
    height: 4px;
    background-color: #D0D0D0;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: #FFFFFF;
    border: 2px solid #E95420;
    width: 16px;
    height: 16px;
    margin: -6px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #F0F0F0;
    border-color: #C34113;
}

QSlider::sub-page:horizontal {
    background-color: #E95420;
    border-radius: 2px;
}

QSlider::add-page:horizontal {
    background-color: #D0D0D0;
    border-radius: 2px;
}

QSlider::groove:vertical {
    width: 4px;
    background-color: #D0D0D0;
    border-radius: 2px;
}

QSlider::handle:vertical {
    background-color: #FFFFFF;
    border: 2px solid #E95420;
    width: 16px;
    height: 16px;
    margin: 0 -6px;
    border-radius: 8px;
}

QSlider::handle:vertical:hover {
    background-color: #F0F0F0;
    border-color: #C34113;
}

QSlider::sub-page:vertical {
    background-color: #E95420;
    border-radius: 2px;
}

QSlider::add-page:vertical {
    background-color: #D0D0D0;
    border-radius: 2px;
}

/* ScrollBar */
QScrollBar:horizontal {
    height: 16px;
    background-color: #F5F5F5;
    border: none;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #D0D0D0;
    min-width: 30px;
    border-radius: 8px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #E95420;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
    height: 0px;
}

QScrollBar:vertical {
    width: 16px;
    background-color: #F5F5F5;
    border: none;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #D0D0D0;
    min-height: 30px;
    border-radius: 8px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #E95420;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    width: 0px;
    height: 0px;
}

/* TabWidget */
QTabWidget::pane {
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    background-color: #FFFFFF;
    top: -1px;
}

QTabBar::tab {
    background-color: #F5F5F5;
    color: #5E5E5E;
    border: 1px solid #D0D0D0;
    border-bottom: none;
    padding: 8px 16px;
    margin-right: 2px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
}

QTabBar::tab:selected {
    background-color: #FFFFFF;
    color: #2D2D2D;
    border-color: #D0D0D0;
    border-bottom-color: #FFFFFF;
}

QTabBar::tab:hover:!selected {
    background-color: #F0F0F0;
    color: #2D2D2D;
}

/* StatusBar */
QStatusBar {
    background-color: #FFFFFF;
    color: #2D2D2D;
    border-top: 1px solid #D0D0D0;
    padding: 2px;
}

/* Dialog */
QDialog {
    background-color: #F5F5F5;
}

/* Label */
QLabel {
    color: #2D2D2D;
    background-color: transparent;
}

QLabel:disabled {
    color: #B0B0B0;
}

/* ToolTip */
QToolTip {
    background-color: #2D2D2D;
    color: #FFFFFF;
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    padding: 4px 8px;
}

/* GroupBox */
QGroupBox {
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 12px;
    font-weight: 600;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    background-color: #F5F5F5;
    color: #2D2D2D;
}

/* ListView, TreeView, TableView */
QListView, QTreeView, QTableView {
    background-color: #FFFFFF;
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    selection-background-color: #E95420;
    selection-color: #FFFFFF;
    alternate-background-color: #F5F5F5;
}

QListView::item:hover, QTreeView::item:hover, QTableView::item:hover {
    background-color: #F0F0F0;
}

QListView::item:selected, QTreeView::item:selected, QTableView::item:selected {
    background-color: #E95420;
    color: #FFFFFF;
}

/* HeaderView */
QHeaderView::section {
    background-color: #F5F5F5;
    color: #2D2D2D;
    padding: 6px;
    border: none;
    border-right: 1px solid #D0D0D0;
    border-bottom: 1px solid #D0D0D0;
    font-weight: 600;
}

QHeaderView::section:hover {
    background-color: #F0F0F0;
}

QHeaderView::section:first {
    border-top-left-radius: 6px;
}

QHeaderView::section:last {
    border-top-right-radius: 6px;
    border-right: none;
}

/* ToolBox */
QToolBox::tab {
    background-color: #F5F5F5;
    color: #2D2D2D;
    border: 1px solid #D0D0D0;
    border-radius: 6px;
    padding: 6px 12px;
    margin-bottom: 2px;
}

QToolBox::tab:selected {
    background-color: #E95420;
    color: #FFFFFF;
    border-color: #E95420;
}

QToolBox::tab:hover {
    background-color: #F0F0F0;
}

/* Splitter */
QSplitter::handle {
    background-color: #D0D0D0;
}

QSplitter::handle:hover {
    background-color: #E95420;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}
