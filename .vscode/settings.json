{
  "files.exclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  "python.analysis.inlayHints.variableTypes": false,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.enablePytestSupport": true,
  "python.analysis.extraPaths": [
    "./Tools/BatchPatcher/src",
    "./Tools/GuiConverter/src",
    "./Tools/HolocronToolset/src",
    "./Tools/HoloPatcher/src",
    "./Tools/KotorDiff/src",
    "./Libraries/PyKotor/src",
    "./Libraries/PyKotorGL/src",
    "./Libraries/PyKotorFont/src",
    "./Libraries/Utility/src"
  ],
  "python.missingPackage.severity": "Information",
  "python.terminal.launchArgs": [
    "-i",
    "-m",
    "debugpy",
    "--listen",
    "5678",
    "--wait-for-client"
  ],
  "python.testing.unittestEnabled": true,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./tests",
    "-p",
    "*test*.py"
  ],
  "launch": {
    "compounds": [],
    "justMyCode": false,
    "debugStdLib": true,
    "autoReload": {
      "enable": true
    }
  },
  "github-actions.workflows.pinned.workflows": [
    ".github/workflows/publish_and_test_pykotor.yml"
  ],
  "mypy.extraArguments": [
    "--exclude=./.venv",
    "--exclude=tests/results",
    "--check-untyped-defs",
    "-v",
    "--explicit-package-bases"
  ],
  "mypy.runUsingActiveInterpreter": true,
  "mypy-type-checker.args": [
    "--check-untyped-defs",
    "--explicit-package-bases"
  ],
  "mypy-type-checker.preferDaemon": true,
  "mypy-type-checker.reportingScope": "file",
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "remote.WSL.fileWatcher.polling": true,
  "files.watcherExclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true,
    "**/.git/**": true
  },
  "debugpy.debugJustMyCode": false,
  "pythonTestExplorer.outputs.showOutputsOnRun": true,
  "pythonTestExplorer.testFramework": "unittest",
  "cody.codebase": "http://github.com/th3w1zard1/PyKotor",
  "cmake.options.statusBarVisibility": "hidden",
  "ruff.lineLength": 320,
  "python.analysis.packageIndexDepths": [
    {
      "name": "",
      "depth": 10,
      "includeAllSymbols": false
    },
    {
      "name": "qtpy",
      "depth": 2
    },
    {
      "name": "sklearn",
      "depth": 2
    },
    {
      "name": "matplotlib",
      "depth": 2
    },
    {
      "name": "scipy",
      "depth": 2
    },
    {
      "name": "django",
      "depth": 2
    },
    {
      "name": "flask",
      "depth": 2
    },
    {
      "name": "fastapi",
      "depth": 2
    }
  ],
}
