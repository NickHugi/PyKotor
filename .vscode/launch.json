{
  "version": "0.2.0",
  "preLaunchTask": "install_requirements",
  "dependsOn": "install_requirements",
  "configurations": [
    {
      "name": "Python Debugger: Attach using Process Id",
      "type": "debugpy",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (current file)",
      "cwd": "${workspaceFolder}",
      "program": "${file}",
      "args": []
    },
    {
      "name": "PowerShell Launch Current File",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${fileDirname}",
      "args": ["-venv_name .venv_312", "-force_python_version 3.12"]
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "pythonArgs": [
        "-Xfrozen_modules=off",
        "-Xdev"
      ],
      "justMyCode": true,
    },
    {
      "name": "Debug Unit Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": [
        "debug-test"
      ],
      "justMyCode": false,
    },
    {
      "name": "Run HoloPatcher",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/Tools/HoloPatcher/src/",
      "module": "holopatcher",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/Libraries/PyKotor/src;${workspaceFolder}/Libraries/Utility/src;${env:PYTHONPATH}"
      },
      "justMyCode": true,
      "autoReload": {
        "enable": true,
      },
    },
    {
      "name": "Run BatchPatcher",
      "type": "debugpy",
      "request": "launch",
      "module": "batchpatcher",
      "cwd": "${workspaceFolder}/Tools/BatchPatcher/src/",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/Libraries/PyKotor/src;${workspaceFolder}/Libraries/Utility/src;${env:PYTHONPATH}"
      },
      "justMyCode": true,
      "autoReload": {
        "enable": true,
      },
    },
  ]
}