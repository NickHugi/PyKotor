{
    "version": "0.2.0",
    "preLaunchTask": "install_requirements",
    "dependsOn": "install_requirements",
    "configurations":
    [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (current file)",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "args": []
        },
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${fileDirname}"
        },
        {
            "name": "Python C++ Debug",
            "type": "pythoncpp",
            "request": "launch",
            "pythonConfig": "default",
            "cppConfig": "default (win) Attach"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "pythonArgs": [
                "-Xfrozen_modules=off",
                "-Xdev"
            ],
            "autoReload": {
                "enable": true,
            },
        },
        {
            "name": "Run Holocron Toolset",
            "type": "debugpy",
            "request": "launch",
            "module": "toolset",
            "cwd": "${workspaceFolder}/Tools/HolocronToolset/src/",
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/Libraries/Utility/src;${workspaceFolder}/Libraries/PyKotor/src;${workspaceFolder}/Libraries/PyKotorGL/src;${env:PYTHONPATH}"
            },
            "pythonArgs": [
                "-Xfrozen_modules=off",
                "-Xdev"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "autoReload": {
                "enable": true,
            },
        },
        {
            "name": "Toolset: Compile UI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Tools/HolocronToolset/src/ui/convertui.py",
            "console": "integratedTerminal",
            "pythonArgs": [
                "-Xfrozen_modules=off",
                "-Xdev"
            ],
            "justMyCode": false,
            "autoReload": {
                "enable": true,
            },
        },
        {
            "name": "Run HoloPatcher",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/Tools/HoloPatcher/src/",
            "module": "holopatcher",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Libraries/PyKotor/src;${workspaceFolder}/Libraries/Utility/src;${env:PYTHONPATH}"
            },
            "justMyCode": true,
            "autoReload": {
                "enable": true,
            },
        },
        {
            "name": "Run BatchPatcher",
            "type": "debugpy",
            "request": "launch",
            "module": "batchpatcher",
            "cwd": "${workspaceFolder}/Tools/BatchPatcher/src/",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Libraries/PyKotor/src;${workspaceFolder}/Libraries/Utility/src;${env:PYTHONPATH}"
            },
            "justMyCode": true,
            "autoReload": {
                "enable": true,
            },
        },
    ]
}
