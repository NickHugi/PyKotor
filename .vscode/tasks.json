    {
      "label": "Python: lint pykotor with mypy",
      "dependsOn": [
        "pykotor_requirements",
        "install_mypy"
      ],
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "mypy",
        "--no-pretty",
        "--show-column-numbers",
        "--package",
        "pykotor",
        "--check-untyped-defs",
        "--no-strict-optional"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "showReuseMessage": true,
        "revealProblems": "never",
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "close": false
      },
      "problemMatcher": {
        "owner": "python",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (\\w+): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
